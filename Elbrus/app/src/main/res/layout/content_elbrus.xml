<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/blue"
    android:orientation="vertical"
    android:gravity="center_horizontal"

    tools:showIn="@layout/activity_elbrus"
    tools:context=".ElbrusActivity">

    <ImageView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/flower"
        android:layout_marginTop="20dp"
        tools:ignore="ContentDescription"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:textColor="#FFFFFF"
        android:fontFamily=""
        android:layout_marginTop="15dp"
        android:text="@string/icon_text"
        />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textAlignment="center"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:textColor="#98f5ff"
        android:textStyle="italic"
        android:text="@string/more_text_icon"
        android:id="@+id/textView"/>

    <com.facebook.login.widget.LoginButton
        android:id="@+id/login_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="login without facebook (for test)"
        android:id="@+id/testLoginButton"
        android:layout_gravity="center_horizontal"
        android:onClick="openAlbum"/>


</LinearLayout>
